<p id="notice"><%= notice %></p>
<% if !@dataset.title.empty? %>
  <h1><%= @dataset.title.first %></h1>
<% else %>
  <h1>Article</h1>
<% end %>
      
<% if !@dataset.subtitle.empty? %>
  <h2><%= @dataset.subtitle.first %></h2>
<% end %>

<% path = { :new => new_dataset_path, :show => dataset_path(@dataset), :edit => edit_dataset_path(@dataset), :list => datasets_path } %>
<br/><%= render partial: "shared/actions/show", :locals => { :path => path } %><br/>
      
<div class="well">
  <div class="row">
    <div class="control-group">
      <%= render partial: "shared/work_type_fields_show", :locals => { :article => @dataset } %>
      
      <% if !@dataset.abstract.empty? %>
      <p>
        <strong>Abstract:</strong>
        <%= @dataset.abstract.first %>
      </p>
      <% end %>
      
      <% if !@dataset.medium.empty? %>
      <p>
        <strong>Medium or material:</strong>
        <%= @dataset.medium.first %>
      </p>
      <% end %>
      
      <% if !@dataset.keyword.empty? %>
      <p>
        <strong>Keywords:</strong>
         <% @dataset.keyword.each do |tag|%>
            <span><%=tag %></span>     
         <% end %>
      </p>
      <% end %>
      
      <%= render partial: "shared/mads_language_fields_show", :locals => { :article => @dataset } %>
      <%= render partial: "shared/mads_subject_fields_show", :locals => { :article => @dataset } %>

    </div><!-- /.control-group -->
  </div> <!-- /.row -->
</div> <!-- /.well -->
