<h1>Update dataset</h1>

<%# using partials rather than inlining, so implementers can add or change stuff on this page without much duplication %>
<%= render partial: 'tabs' %>

<div>
    <% if @dataset.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@dataset.errors.count, "error") %> prohibited this dataset from being saved:</h2>
        <ul>
          <% @dataset.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
</div>

<div class="tab-content">
  <%= render partial: 'files_form' %>
  <%= render partial: 'form' %>
</div>
<br/>

<% path = { :new => new_dataset_path, :show => dataset_path(@pid), :edit => edit_dataset_path(@pid), :list => datasets_path } %>
<%= render partial: "shared/actions/edit", :locals => { :path => path } %>

