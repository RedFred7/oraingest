<div class="fieldset">

  <%= render partial: '/shared/tooltip_base', locals: {tip_type: "citation", tip_title: "Title", tip_description: "Enter the title by which your publication should be known and cited." } %>


  <p class="small reqlabel">Title</p>
  <%= f.text_field :title, :value=>@article.title.first, :required=>true, :style=>'width: 60%', data: {"progress" => "citation"} %>
</div>

<div class="fieldset">

  <%= render partial: '/shared/tooltip_base', locals: {tip_type: "discoverability", tip_title: "Subtitle", tip_description: "If you would like to give your publication a sub-title, enter it here." } %>

  <p class="small">Subtitle</p>
  <%= f.text_field :subtitle, :value=>@article.subtitle.first, :style=>'width: 60%', data: {"progress" => "discoverability"} %>
</div>

<div class="fieldset">

  <%= render partial: '/shared/tooltip_base', locals: {tip_type: "discoverability", tip_title: "Abstract", tip_description: "If you would like to give us an abstract of your publication, enter it here." } %>

  <p class="small">Abstract</p>
  <%= f.text_area :abstract, :value=>@article.abstract.first, :style=>'width: 60%', data: {"progress" => "discoverability"} %>

</div>

<% if !@article.medium.nil? && !@article.medium.empty? && !@article.medium.first.empty? %>
  <!-- Only display if information exists i.e. imported records -->
  <div class="fieldset">

    <%= render partial: '/shared/tooltip_base', locals: {tip_type: "discoverability", tip_title: "Medium", tip_description: "If you would like to tell us the medium of your publication, enter it here." } %>

    <p class="small">Medium</p>
    <%= f.text_field :medium, :value=>@article.medium.first, data: {"progress" => "discoverability"} %>

  </div>
<% end %>

