    <tr>
      <% if display_thumbs %>
        <td class="span10"><%= link_to image_tag("default.png", {width: 45, height: 60}), article_path(article) %> </td>
      <% end %>
      <td>
        <h3>
          <%= link_to article.title, article, :title => article.title  %>

          <% if display_access %>
            <span class="label label-<%=article.embargoLevel%>"><%= article.embargoStatus %></span>
          <% end %>
        </h3>
        <p> 
          <% if !article.subtitle.nil? %>
            <span><%= article.subtitle %></span>
          <% end %>
          <% if !article.description.nil? %>
            <span><%= truncate(article.description, :length=>100, :separatoe =>"...") %></span>
          <% end %>
          <% if !article.reviewStatus.nil? %>
            <span><% article.reviewStatus %></span>
          <% end %>
        </p>
      </td>
      <td class="span10">
        <span class="label label-success"><%= link_to 'Edit', edit_article_path(article) %> </span><br/>&nbsp;<br/>
        <span class="label label-warning"><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure you want to delete %s?'%article.title } %> </span>
      </td>
    </tr>
