<p id="notice"><%= notice %></p>
<% if !@article.title.empty? %>
  <h1><%= @article.title.first %></h1>
<% else %>
  <h1>Article</h1>
<% end %>
      
<% if !@article.subtitle.empty? %>
  <h2><%= @article.subtitle.first %></h2>
<% end %>
      
<div class="well">
  <div class="row">
    <div class="control-group">
      <%= render partial: "shared/work_type_fields_show", as: :article %>
      
      <% if !@article.abstract.empty? %>
      <p>
        <strong>Abstract:</strong>
        <%= @article.abstract.first %>
      </p>
      <% end %>
      
      <% if !@article.medium.empty? %>
      <p>
        <strong>Medium or material:</strong>
        <%= @article.medium.first %>
      </p>
      <% end %>
      
      <% if !@article.keyword.empty? %>
      <p>
        <strong>Keywords:</strong>
         <% @article.keyword.each do |tag|%>
            <span><%=tag %></span>     
         <% end %>
      </p>
      <% end %>
      
      <% if !@article.publicationStatus.empty? %>
      <p>
        <strong>Publication status:</strong>
        <%= @article.publicationStatus.first %>
      </p>
      <% end %>
      
      <% if !@article.reviewStatus.empty? %>
      <p>
        <strong>reviewStatus:</strong>
        <%= @article.reviewStatus.first %>
      </p>
      <% end %>
    </div><!-- /.control-group -->
  </div> <!-- /.row -->
</div> <!-- /.well -->
      
