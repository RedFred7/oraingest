  <div id="workflow_display" class="tab-pane">
    <%= form_for @article, :url => article_path, :html => {:multipart => true, :class => 'form-horizontal', :id => 'workflow'} do |f| %>
      <%= hidden_field_tag('redirect_tab', 'workflow') %>
      <%= render :partial => "articles/workflow_form", :locals => { :article => @article, :f=> f } %>
      <div class="row form-actions" id="workflow_submit">
        <% if article.workflows.empty? || article.workflows.first.current_status == "Draft" %>
          <%= button_tag '<i class="icon-save"></i> Submit for Review'.html_safe, :type => 'submit', :class => 'btn-primary btn-large', :onclick => "confirmation_needed = false;", :id => "upload_submit", :name => "update_workflow" %>
        <% else %>
          <%= button_tag '<i class="icon-save"></i> Update Workflow'.html_safe, :type => 'submit', :class => 'btn-primary btn-large', :onclick => "confirmation_needed = false;", :id => "upload_submit", :name => "update_workflow" %>
        <% end %>
      </div>
  <% end %>
</div><!-- /#workflow_display -->
