<div class="tab-pane" id="describetab">
  <%= form_for(@article) do |f| %>
    <%= hidden_field_tag(:pid, @pid) %>
    <div class="well">
      <div class="row">
        <div class="control-group">
          <%= render partial: "shared/work_type_fields_edit", as: :article, :locals => { :f => f } %>
          <%= render partial: "describe_fields_edit", as: :article, :locals => { :f => f } %>
          <%= render partial: "shared/mads_language_fields_edit", as: :article, :locals => { :f => f } %>
          <%= render partial: "shared/mads_subject_fields_edit", as: :article, :locals => { :f => f } %>
          <div class="actions">
            <%= f.submit "Save article description", class: "btn btn-success" %>
          </div>
        </div><!-- /.control-group -->
      </div> <!-- /.row -->
    </div> <!-- /.well -->
  <% end %>
</div>

