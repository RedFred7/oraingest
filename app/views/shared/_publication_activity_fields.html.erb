  <% if @article.publication.empty? %>
    <% @article.publication.build %>
  <% end %>
  <% @article.publication.each do |p| %>
    <% if p.hasDocument.empty? %>
      <% p.hasDocument.build %>
    <% end %>
    <% if p.publisher.empty? %>
      <% p.publisher.build %>
    <% end %>
    <% p.publisher.each do |p2| %>
      <div class="field">
        <%= label_tag "article[publication][][publisher][][name]", "Publisher name" %>
        <%= text_field_tag "article[publication][][publisher][][name]", p2.name.first %>
      </div>
      <div class="field">
        <%= label_tag "article[publication][][publisher][][website]", "Publisher website" %>
        <%= text_field_tag "article[publication][][publisher][][website]", p2.website.first %>
      </div>
    <% end %> 
    <div class="field">
      <%= label_tag "article[publication][][dateAccepted]", "Date of acceptance" %>
      <%= date_field_tag "article[publication][][dateAccepted]", p.dateAccepted.first %>
    </div>
    <div class="field">
      <%= label_tag "article[publication][][datePublished]", "Date published" %>
      <%= date_field_tag "article[publication][][datePublished]", p.datePublished.first %>
    </div>
    <div class="field">
      <%= label_tag "article[publication][][location]", "Place of publication" %>
      <%= text_field_tag "article[publication][][location]", p.location.first %>
    </div>
    <% p.hasDocument.each do |p2| %>
      <% if p2.journal.empty? %>
        <% p2.journal.build %>
      <% end %>
      <div class="field">
        <%= label_tag "article[publication][][hasDocument][][doi]", "DOI" %>
        <%= text_field_tag "article[publication][][hasDocument][][doi]", p2.doi.first %>
      </div>
      <div class="field">
        <%= label_tag "article[publication][][hasDocument][][uri]", "URL for publisher copy of the document" %>
        <%= text_field_tag "article[publication][][hasDocument][][uri]", p2.uri.first %>
      </div>
      <div class="field">
        <%= label_tag "article[publication][][hasDocument][][identifier]", "Article number" %>
        <%= text_field_tag "article[publication][][hasDocument][][identifier]", p2.identifier.first %>
      </div>
      <% p2.journal.each do |p3| %>
        <% if p3.periodical.empty? %>
          <% p3.periodical.build %>
        <% end %>
        <div class="field">
          <%= label_tag "article[publication][][hasDocument][][journal][][title]", "Journal title" %>
          <%= text_field_tag "article[publication][][hasDocument][][journal][][title]", p3.title.first %>
        </div>
        <div class="field">
          <%= label_tag "article[publication][][hasDocument][][journal][][issn]", "Journal ISSN" %>
          <%= text_field_tag "article[publication][][hasDocument][][journal][][issn]", p3.issn.first %>
        </div>
        <div class="field">
          <%= label_tag "article[publication][][hasDocument][][journal][][eissn]", "Journal eISSN" %>
          <%= text_field_tag "article[publication][][hasDocument][][journal][][eissn]", p3.eissn.first %>
        </div>
        <div class="field">
          <%= label_tag "article[publication][][hasDocument][][journal][][volume]", "Journal volume" %>
          <%= text_field_tag "article[publication][][hasDocument][][journal][][volume]", p3.volume.first %>
        </div>
        <div class="field">
          <%= label_tag "article[publication][][hasDocument][][journal][][issue]", "Journal issue" %>
          <%= text_field_tag "article[publication][][hasDocument][][journal][][issue]", p3.issue.first %>
        </div>
        <div class="field">
          <%= label_tag "article[publication][][hasDocument][][journal][][pages]", "Page range" %>
          <%= text_field_tag "article[publication][][hasDocument][][journal][][pages]", p3.pages.first %>
        </div>
        <% p3.periodical.each do |p4| %>
          <div class="field">
            <%= label_tag "article[publication][][hasDocument][][journal][][periodical][][title]", "Name of periodical" %>
            <%= text_field_tag "article[publication][][hasDocument][][journal][][periodical][][title]", p4.title.first %>      
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
