<div id="language">
<% unless @article.language.first.nil? %>
  <% l1 = @article.language.first %>
  <input type="hidden" name="article[language][id]", value = l1.rdf_subject.to_s %>
<% end %>
<% @article.language.each_with_index do |l1, l1_index| %>
  <%= f.fields_for :l1 do |l| %>
    <div class="field">
      <%= l.label :languageLabel, "Language" %><br>
      <%= l.text_field :languageLabel, :value=>@article.language[l1_index].languageLabel.first %>
    </div>
    <div class="field">
      <%= l.label :languageCode, "Language code" %><br>
      <%= l.text_field :languageCode, :value=>@article.language[l1_index].languageCode.first %>
    </div>
    <div class="field">
      <%= l.label :languageAuthority, "Language authority" %><br>
      <%= l.text_field :languageAuthority, :value=>@article.language[l1_index].languageAuthority.first %>
    </div>
    <div class="field">
      <%= l.label :languageScheme, "Language Scheme" %><br>
      <%= l.text_field :languageScheme, :value=>@article.language[l1_index].languageScheme.first %>
    </div>
  <% end %>
<% end %>
</div>
