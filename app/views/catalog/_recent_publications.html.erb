<% msg = '<a href="%s">Login</a> to see your recently added documents'%new_user_session_path if msg.blank? and current_user.blank? %>
<% msg = 'You have no documents to display. Contribute some of your publications!' if msg.blank? %>
<% if recent_publications.blank? %>
<p><%= raw(msg) %></p>
<% else %>
<h3>Latest publications</h3>
<%= render :partial => "catalog/_index_partials/document_list", :locals => {:recent_documents => recent_publications} %>
<% end %>
