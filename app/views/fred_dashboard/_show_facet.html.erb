<li><span><%= facet.to_s.gsub('_', ' ').capitalize %></span>
<ul>
	<% constraints.each do |name, count| %>
	<li>
		<% mod_query_string = add_to_query({facet => name}) %>
		<%= link_to name,  { controller: "fred_dashboard", q: mod_query_string }, class: "facet_select" %>
		<span class="count"><%= count %></span>
	</li>
	<% end %>
</ul>
</li>